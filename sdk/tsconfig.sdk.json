{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,

		"outDir": "../../dist/sdk",
		"rootDir": "../",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": []
	},
	"include": ["./**/*.ts"],
	"exclude": ["**/*.test.ts", "node_modules"]
}
